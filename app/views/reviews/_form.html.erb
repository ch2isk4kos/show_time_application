<%= simple_form_for([@movie, @movie.reviews.build]) do |f| %>
    <div class="rating-form">
        <label for="">Rating</label>
    </div>
    <%= f.input :comment %>
    <%= f.button :submit, class: 'btn btn-custom2 btn-info' %>
<% end %>

<script src="#" charset="utf-8">
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>
